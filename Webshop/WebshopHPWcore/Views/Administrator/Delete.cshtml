@model WebshopHPWcore.Models.Car

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Verwijderen</h2>
<h4>@Html.DisplayFor(m => m.brand) @Html.DisplayFor(m => m.model)</h4>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Merk
        </dt>
        <dd>
            @Html.DisplayFor(model => model.brand)
        </dd>
        <dt>
            Model
        </dt>
        <dd>
            @Html.DisplayFor(model => model.model)
        </dd>
        <dt>
            Bouwjaar
        </dt>
        <dd>
            @Html.DisplayFor(model => model.manufactureyear)
        </dd>
        <dt>
            Kleur
        </dt>
        <dd>
            @Html.DisplayFor(model => model.color)
        </dd>
        <dt>
            Prijs
        </dt>
        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt>
            PK
        </dt>
        <dd>
            @Html.DisplayFor(model => model.horsepower)
        </dd>
        <dt>
            Gewicht
        </dt>
        <dd>
            @Html.DisplayFor(model => model.weight)
        </dd>
        <dt>
            Topsnelheid
        </dt>
        <dd>
            @Html.DisplayFor(model => model.topspeed)
        </dd>
        <dt>
            Type Motor
        </dt>
        <dd>
            @Html.DisplayFor(model => model.enginetype)
        </dd>
        <dt>
            Type Brandstof
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fueltype)
        </dd>
        <dt>
            Verbruik
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fuelusage)
        </dd>
        <dt>
            Transmissie
        </dt>
        <dd>
            @Html.DisplayFor(model => model.transmission)
        </dd>
        <dt>
            Kilometerstand
        </dt>
        <dd>
            @Html.DisplayFor(model => model.mileage)
        </dd>
        <dt>
            APK
        </dt>
        <dd>
            @Html.DisplayFor(model => model.apk)
        </dd>
        <dt>
            Garantie
        </dt>
        <dd>
            @Html.DisplayFor(model => model.warranty)
        </dd>
        <dt>
            Aantal deuren
        </dt>
        <dd>
            @Html.DisplayFor(model => model.amountofdoors)
        </dd>
        <dt>
            Aantal stoelen
        </dt>
        <dd>
            @Html.DisplayFor(model => model.amountofseats)
        </dd>
        <dt>
            Aantal vorige eigenaren
        </dt>
        <dd>
            @Html.DisplayFor(model => model.amountofpreviousowners)
        </dd>
        <dt>
            Afbeelding
        </dt>
        <dd>
            @Html.DisplayFor(model => model.image)
        </dd>
    </dl>
</div>
   <div> 
       <form asp-action="Delete">
           <input type="hidden" asp-for="carid" />
           <input type="submit" value="Verwijderen" class="btn btn-default" />
       </form></div>
<br />
<div>
        <a asp-action="Index">Terug naar overzicht</a>
</div>
